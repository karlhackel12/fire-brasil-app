# Configurações da aplicação FIRE Brasil

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Banco de dados
DATABASE_URL=sqlite:///./data/fire_brasil.db

# Segurança
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256

# Desenvolvimento
DEBUG=true
TESTING=false

# Logging
LOG_LEVEL=INFO

# Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_FOLDER=uploads

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Configurações brasileiras
BRAZILIAN_CURRENCY=BRL
BRAZILIAN_LOCALE=pt_BR
DEFAULT_INFLATION_RATE=0.045
DEFAULT_INVESTMENT_RETURN=0.10